#:import utils kivy.utils
#:import datetime datetime
<FlatButton@ButtonBehavior+Label>:

<HomeScreen>:
    BoxLayout:
        orientation: "vertical"
        spacing: 3
        BoxLayout:
            size_hint_y: .1
            canvas.before:
                Color:
                    rgba: utils.get_color_from_hex('#2a3f54')
                Rectangle:
                    pos: self.pos
                    size: self.size

            FlatButton:
                id: lab
                text:'                         Current Date and Time:'
                font_name:"C:\\Users\\Merve\\AppData\\Local\\Microsoft\\Windows\\Fonts\\Bangers-Regular.ttf"
                font_size:"25sp"

                Image:
                    source:"C:\\Users\\Merve\\Desktop\\app\\pythonkivy\\clock.png"
                    x:self.parent.x+1
                    y:self.parent.y+10
            Label:
                id: current
                text: app.time
                font_name:"C:\\Users\\Merve\\AppData\\Local\\Microsoft\\Windows\\Fonts\\Bangers-Regular.ttf"
                font_size:"25sp"

        BoxLayout:
            orientation: "vertical"
            size_hint_y:.3
            canvas.before:
                Color:
                    rgba: utils.get_color_from_hex('#ffffff')
                Rectangle:
                    pos: self.pos
                    size: self.size

            BoxLayout:
                orientation:"horizontal"
                BoxLayout:
                    size_hint_x:3
                    orientation: "vertical"
                    spacing: 3
                    TextInput:
                        id: task
                        focus: True
                        font_size: 35
                        font_name: "C:\\Users\\Merve\\AppData\\Local\\Microsoft\\Windows\\Fonts\\DarkerGrotesque-ExtraBold.ttf"
                        multiline: False
                        hint_text: "Task"
                        write_tab:False
                    TextInput:
                        id: deadline
                        focus:True
                        font_size: 35
                        font_name: "C:\\Users\\Merve\\AppData\\Local\\Microsoft\\Windows\\Fonts\\DarkerGrotesque-ExtraBold.ttf"
                        multiline: False
                        hint_text: "Deadline(dd/mm)"
                BoxLayout:
                    orientation:"vertical"
                    FlatButton:
                        id:add
                        on_press:
                            root.add()
                            root.empty()
                        on_release:root.manager.current="ListScreen"
                        canvas.before:
                            Color:
                                rgba: utils.get_color_from_hex('#ffffff')
                            Rectangle:
                                pos: self.pos
                                size: self.size
                        Image:
                            source: 'C:\\Users\\Merve\\Desktop\\app\\pythonkivy\\add.png'
                            x:self.parent.x+50
                            y:self.parent.y+120

        BoxLayout:
            orientation:"horizontal"
            size_hint_y:.1
            canvas.before:
                Color:
                    rgba: utils.get_color_from_hex('#2a3f54')
                Rectangle:
                    pos: self.pos
                    size: self.size
            FlatButton:
                id: list
                on_press:root.manager.current="ListScreen"
                Image:
                    source: 'C:\\Users\\Merve\\Desktop\\app\\pythonkivy\\list.png'
                    size: self.parent.size
                    pos: self.parent.pos


